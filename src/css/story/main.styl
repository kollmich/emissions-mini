#perspective-scroll
    margin 0 auto
    margin-top 3rem
    margin-bottom 1rem
    width $column-width
    +mq('bp-4')
        width $column-width-wide
        max-width $column-width-max

.heading
    font-family $akkurat
    font-size 15px
    font-weight 800
    opacity 1
    fill $blue
    +mq('bp-4')
        font-size 20px

.subheading
    font-family $sans
    font-size 12px
    font-weight 400
    fill $gray-dark
    +mq('bp-4')
        font-size 14px

.source, .brand
    font-family $akkurat
    font-size 9px
    font-weight 200
    fill $gray-dark
    +mq('bp-4')
        font-size 11px

.brand
    font-family $sans

.axis path
    stroke $gray-light
    opacity 0.7

.axis line
    stroke $gray-light
    opacity 0.7

.axis text
    font-family $akkurat
    font-size 10px
    fill $gray-dark
    +mq('bp-4')
        font-size 11px

.label
    font-family $sans
    fill $gray-dark
    
.tooltip, .callout
    font-family $sans
    fill $gray-dark
    font-size 12px
    text-anchor left
    font-weight 400
    text-align right

.tooltip, .callout tspan
    text-align right

.old
    fill $red

.emission rect
    position relative
    stroke $red
    fill $red
    opacity 1


.prose_body
        width $column-width
        margin 0 auto
        font-size 14px
        font-weight 200
        color $gray
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale       
        text-align justify         
        +mq('bp-4')
            width $column-width-wide
            max-width $column-width-max

.prose__hed
    width $column-width
    margin 0 auto
    color $gray
    +mq('bp-4')
        max-width $column-width-max