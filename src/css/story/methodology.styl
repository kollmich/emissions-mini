#methodology
    margin 0 auto
    margin-top 3rem
    margin-bottom 2rem

    #articles, #citations
            width $column-width
            margin 0 auto
            -webkit-font-smoothing antialiased
            -moz-osx-font-smoothing grayscale       
            text-align justify         
            +mq('bp-4')
                width $column-width-wide
                max-width $column-width-max * 0.75

            .hed
                margin-top 2.5rem
                font-family $akkurat
                opacity 1
                color $gray-dark
                font-size 15px
                font-weight 800
                +mq('bp-4')
                    font-size 19px

            p
                line-height 1
                font-size 11px
                font-weight 400
                color $gray-dark